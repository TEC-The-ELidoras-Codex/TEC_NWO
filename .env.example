# The Elidoras Codex - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Application Configuration
NODE_ENV=development
PORT=3000
APP_NAME="The Elidoras Codex"
APP_VERSION="1.0.0"

# Database Configuration
DATABASE_URL=postgresql://tecadmin:dev-password-123@localhost:5432/tecdb
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tecdb
DB_USER=tecadmin
DB_PASSWORD=dev-password-123
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Azure OpenAI Configuration
OPENAI_API_KEY=your-azure-openai-api-key-here
OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
OPENAI_API_VERSION=2024-02-15-preview
OPENAI_MODEL_DEPLOYMENT=gpt-4o
OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-3-small

# Azure AI Search Configuration
AZURE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net
AZURE_SEARCH_API_KEY=your-search-api-key-here
AZURE_SEARCH_INDEX_NAME=tec-knowledge-base

# Azure Storage Configuration
AZURE_STORAGE_ACCOUNT_NAME=your-storage-account
AZURE_STORAGE_ACCOUNT_KEY=your-storage-key
AZURE_STORAGE_CONTAINER_NAME=tec-files

# Azure Key Vault Configuration (for production)
KEY_VAULT_URL=https://your-keyvault.vault.azure.net/
AZURE_CLIENT_ID=your-managed-identity-client-id
AZURE_CLIENT_SECRET=your-service-principal-secret
AZURE_TENANT_ID=your-azure-tenant-id

# Application Insights Configuration
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=your-key-here;IngestionEndpoint=https://your-region.in.applicationinsights.azure.com/;LiveEndpoint=https://your-region.livediagnostics.monitor.azure.com/

# Authentication Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random
JWT_EXPIRY=24h
SESSION_SECRET=your-session-secret-here
COOKIE_SECURE=false
COOKIE_DOMAIN=localhost

# Security Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_ROUNDS=12

# Axiom Engine Configuration
AXIOM_VALIDATION_ENABLED=true
AXIOM_STRICT_MODE=false
AXIOM_CACHE_TTL=3600

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/tec.log
LOG_FILE_MAX_SIZE=10MB
LOG_FILE_MAX_FILES=5

# Feature Flags
FEATURE_NARRATIVE_GENERATOR=true
FEATURE_COMMUNITY_PLATFORM=false
FEATURE_ADVANCED_ANALYTICS=false
FEATURE_REAL_TIME_COLLABORATION=false

# Email Configuration (for notifications)
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@elidorascodex.org

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret-for-github-etc

# Development Tools
ENABLE_SWAGGER=true
ENABLE_PLAYGROUND=true
ENABLE_DEBUG_ROUTES=true
HOT_RELOAD=true

# Performance Configuration
MAX_REQUEST_SIZE=10mb
REQUEST_TIMEOUT=30000
COMPRESSION_ENABLED=true
CACHE_TTL=300

# Background Jobs Configuration
JOB_QUEUE_ENABLED=true
JOB_CONCURRENCY=5
JOB_MAX_ATTEMPTS=3

# Monitoring and Health Checks
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
METRICS_PORT=9090

# AI Model Configuration
AI_RESPONSE_MAX_TOKENS=2000
AI_TEMPERATURE=0.7
AI_TOP_P=0.9
AI_FREQUENCY_PENALTY=0.1
AI_PRESENCE_PENALTY=0.1

# Content Moderation
CONTENT_MODERATION_ENABLED=true
CONTENT_MODERATION_STRICT=false
CONTENT_FILTER_THRESHOLD=0.8

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
