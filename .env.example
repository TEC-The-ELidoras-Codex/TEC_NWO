# TEC Environment Configuration
# Copy this to .env and fill in your actual values

# Azure OpenAI Credentials - Get these from your Azure portal
AZURE_OPENAI_API_KEY="YOUR_API_KEY_HERE"
AZURE_OPENAI_ENDPOINT="https://your-resource-name.openai.azure.com/"
AZURE_OPENAI_MODEL="gpt-4"

# Database Connection - PostgreSQL + Vector DB
DATABASE_URL="postgresql://user:password@localhost:5432/tec_database"

# JWT Secret for Security - Generate a random string
JWT_SECRET="YOUR_RANDOM_SECRET_KEY_HERE"

# Server Configuration
PORT=3000
NODE_ENV="development"

# AxiomEngine Configuration
AXIOM_VALIDATION_ENABLED=true

# Memory Core Configuration
VECTOR_DB_ENABLED=true

# DialogueInterface Configuration
WEBSOCKET_ENABLED=true
