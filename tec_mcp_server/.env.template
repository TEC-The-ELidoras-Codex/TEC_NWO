# TEC Asimov Engine - Environment Configuration Template
# Copy to .env.local and fill in your actual values
# NEVER commit actual secrets to Git

# === MCP SERVER CONFIGURATION ===
TEC_MODE=mcp
PYTHONPATH=/app
TEC_LOG_LEVEL=INFO
TEC_HOST=0.0.0.0
TEC_PORT=3000
TEC_DEBUG=False
TEC_ENVIRONMENT=development

# === AI SERVICE API KEYS ===
# Azure OpenAI API Key (required for intelligence functions)
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_MODEL=gpt-4
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# ElevenLabs API Key (required for audio processing)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# === DATABASE CONFIGURATION ===
# Development (SQLite)
DATABASE_URL=sqlite:///app/data/tec_memory.db

# Production (PostgreSQL) - uncomment and use instead of SQLite
# DATABASE_URL=postgresql://tec_user:tec_sovereign_key@tec-database:5432/tec_memory

# === SECURITY CONFIGURATION ===
JWT_SECRET_KEY=your_jwt_secret_key_here

# === OPTIONAL SERVICES ===
# Redis Cache URL (optional)
# REDIS_URL=redis://tec-cache:6379/0

# === SOVEREIGNTY CONFIGURATION ===
# Axiom validation strictness (0.0 to 1.0)
AXIOM_VALIDATION_THRESHOLD=0.8

# Hybrid intelligence analog influence (0.0 to 1.0) 
HYBRID_ANALOG_INFLUENCE=0.7

# Memory core semantic search threshold
MEMORY_SEARCH_THRESHOLD=0.75

# === DEVELOPMENT SETTINGS ===
# Enable debug logging
# DEBUG=true

# Enable development mode features
# DEV_MODE=true

# Disable axiom validation for testing (DO NOT USE IN PRODUCTION)
# DISABLE_AXIOM_VALIDATION=false
ENCRYPTION_KEY=your_encryption_key_here

# TEC System Configuration
TEC_AXIOM_VALIDATION_THRESHOLD=0.6
TEC_MEMORY_SEARCH_LIMIT=10
TEC_TOOL_EXECUTION_TIMEOUT=300

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# External Tool Paths (optional)
AGENTIC_PROCESSOR_PATH=../scripts/agentic_processor.py
WORLD_ANVIL_API_PATH=../scripts/world_anvil_api.py

# Vector Database Configuration (if using separate vector DB)
VECTOR_DB_URL=your_vector_database_url
VECTOR_DB_DIMENSION=1536

# Monitoring and Metrics
ENABLE_METRICS=true
METRICS_PORT=9090
