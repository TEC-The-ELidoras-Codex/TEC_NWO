# TEC MCP Server Environment Configuration
# Copy this file to .env and fill in your actual values

# Server Configuration
TEC_HOST=0.0.0.0
TEC_PORT=5000
TEC_DEBUG=False
TEC_ENVIRONMENT=development

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/tec_database

# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_MODEL=gpt-4
AZURE_OPENAI_API_VERSION=2024-02-01

# Security Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# TEC System Configuration
TEC_AXIOM_VALIDATION_THRESHOLD=0.6
TEC_MEMORY_SEARCH_LIMIT=10
TEC_TOOL_EXECUTION_TIMEOUT=300

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# External Tool Paths (optional)
AGENTIC_PROCESSOR_PATH=../scripts/agentic_processor.py
WORLD_ANVIL_API_PATH=../scripts/world_anvil_api.py

# Vector Database Configuration (if using separate vector DB)
VECTOR_DB_URL=your_vector_database_url
VECTOR_DB_DIMENSION=1536

# Monitoring and Metrics
ENABLE_METRICS=true
METRICS_PORT=9090
