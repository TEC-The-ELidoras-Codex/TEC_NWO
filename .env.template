# TEC System Environment Configuration
# Copy this to .env and update with your actual values

# ================================
# CORE SYSTEM CONFIGURATION
# ================================
NODE_ENV=development
PORT=3001
HOST=localhost

# ================================
# AZURE OPENAI CONFIGURATION
# ================================
AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here
AZURE_OPENAI_ENDPOINT=https://your-openai-resource.openai.azure.com/
AZURE_OPENAI_MODEL=gpt-4
AZURE_OPENAI_MODEL_VERSION=2024-02-15-preview

# ================================
# DATABASE CONFIGURATION
# ================================
DATABASE_URL=postgresql://username:password@localhost:5432/tec_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tec_db
DB_USER=tec_user
DB_PASSWORD=secure_password_here

# ================================
# REDIS CONFIGURATION (Optional)
# ================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ================================
# SECURITY CONFIGURATION
# ================================
# Generate strong secrets for production
JWT_SECRET=your-super-secure-jwt-secret-minimum-32-characters
ENCRYPTION_KEY=your-256-bit-encryption-key-exactly-32-chars
SESSION_SECRET=your-session-secret-for-cookie-signing
BCRYPT_SALT_ROUNDS=12

# ================================
# CORS & SECURITY
# ================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://yourdomain.com
CORS_CREDENTIALS=true
HELMET_CSP_ENABLED=true

# ================================
# RATE LIMITING
# ================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# ================================
# LOGGING CONFIGURATION
# ================================
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_FILE=logs/tec-system.log
ENABLE_REQUEST_LOGGING=true

# ================================
# TEC FEATURE FLAGS
# ================================
ENABLE_COMMUNITY=true
ENABLE_NARRATIVE=true
ENABLE_ANALYTICS=true
ENABLE_WEBSOCKETS=true
ENABLE_BACKGROUND_PROCESSING=true

# ================================
# MONITORING & HEALTH CHECKS
# ================================
HEALTH_CHECK_INTERVAL=300000
METRICS_COLLECTION_ENABLED=true
PROMETHEUS_ENDPOINT_ENABLED=false

# ================================
# DEVELOPMENT MODE SETTINGS
# ================================
ENABLE_DEBUG_LOGGING=true
ENABLE_MOCK_AI_RESPONSES=false
DISABLE_AUTHENTICATION=false
ENABLE_CORS_ALL_ORIGINS=false

# ================================
# PRODUCTION DEPLOYMENT
# ================================
# Uncomment and configure for production deployment

# SSL Configuration
# SSL_ENABLED=true
# SSL_CERT_PATH=/path/to/certificate.crt
# SSL_KEY_PATH=/path/to/private.key

# Azure Deployment
# AZURE_SUBSCRIPTION_ID=your-subscription-id
# AZURE_RESOURCE_GROUP=tec-system-rg
# AZURE_APP_SERVICE_NAME=tec-system-app

# Container Configuration
# DOCKER_REGISTRY=your-registry.azurecr.io
# DOCKER_IMAGE_TAG=latest

# ================================
# AXIOM ENGINE CONFIGURATION
# ================================
AXIOM_VALIDATION_STRICT_MODE=false
AXIOM_SCORING_THRESHOLD=0.6
AXIOM_ENABLE_DEEP_ANALYSIS=true

# ================================
# MEMORY CORE CONFIGURATION
# ================================
MEMORY_CORE_MAX_EVENTS=10000
MEMORY_CORE_PATTERN_THRESHOLD=0.3
MEMORY_CORE_ENABLE_LEARNING=true

# ================================
# DIALOGUE INTERFACE CONFIGURATION
# ================================
DIALOGUE_MAX_CONCURRENT_SESSIONS=1000
DIALOGUE_SESSION_TIMEOUT=3600000
DIALOGUE_ENABLE_SYNTHESIS=true

# ================================
# NARRATIVE GENERATOR CONFIGURATION
# ================================
NARRATIVE_MAX_LENGTH=5000
NARRATIVE_STYLE_ADAPTABILITY=high
NARRATIVE_HISTORICAL_GROUNDING=true

# ================================
# INTEGRATION ENDPOINTS
# ================================
# External API endpoints for enhanced functionality
EXTERNAL_FACT_CHECK_API=
EXTERNAL_SENTIMENT_API=
EXTERNAL_TRANSLATION_API=

# ================================
# BACKUP & RECOVERY
# ================================
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups

# ================================
# COMPLIANCE & AUDITING
# ================================
AUDIT_LOGGING_ENABLED=true
COMPLIANCE_MODE=standard
DATA_RETENTION_DAYS=365
PRIVACY_MODE=enhanced
